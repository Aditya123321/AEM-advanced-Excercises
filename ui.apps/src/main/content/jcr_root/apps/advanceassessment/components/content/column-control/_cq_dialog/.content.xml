<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Column Control"
    sling:resourceType="cq/gui/components/authoring/dialog">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/container">
        <items jcr:primaryType="nt:unstructured">
            <tabs
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/tabs"
                maximized="{Boolean}true">
                <items jcr:primaryType="nt:unstructured">
                    <properties
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Properties"
                        sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                        margin="{Boolean}false">
                        <items jcr:primaryType="nt:unstructured">
                            <coltype
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/container">
                                <items jcr:primaryType="nt:unstructured">
                                    <properties-group
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/well">
                                        <items jcr:primaryType="nt:unstructured">
                                            <is-container
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                                checked="{Boolean}false"
                                                fieldDescription="Check to make the section wrap into a container"
                                                name="./isContainer"
                                                text="Is Container ?"
                                                value="{Boolean}true"/>
                                            <columns
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                                fieldDescription="Select Column widths and each column would get adjusted to the width chosen"
                                                fieldLabel="Column Widths"
                                                name="./numCols">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <select
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Select Columns"/>
                                                    <col1-100
                                                        jcr:primaryType="nt:unstructured"
                                                        text="One Column -100"
                                                        value="100"/>
                                                    <col2-50-50
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Two Columns-50-50"
                                                        value="50-50"/>
                                                    <col2-25-75
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Two Columns-25-75"
                                                        value="25-75"/>
                                                    <col2-35-65
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Two Columns-35-65"
                                                        value="35-65"/>
                                                    <col2-75-25
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Two Columns-75-25"
                                                        value="75-25"/>
                                                    <col3-33-33-33
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Three Columns-33-33-33"
                                                        value="33-33-33"/>
                                                    <col4-25-25-25-25
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Four Columns-25-25-25-25"
                                                        value="25-25-25-25"/>
                                                    <col4-responsive-25-25-25-25
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Responsive Four Columns-25-25-25-25"
                                                        value="resp-25-25-25-25"/>
                                                    <col4-large-col1-small
                                                        jcr:primaryType="nt:unstructured"
                                                        text="4Column-Large 1Column-Small"
                                                        value="col4-large-col1-small"/>
                                                    <col3-responsive-33-33-33
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Responsive Three Columns-33-33-33"
                                                        value="responsive-33-33-33"/>
                                                    <col2-responsive-50-50
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Responsive Two Columns-50-50"
                                                        value="responsive-50-50"/>
                                                    <col2-responsive-25-75
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Responsive Two Columns-25-75"
                                                        value="responsive-25-75"/>
                                                </items>
                                            </columns>
                                            <remove-gutters
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                                checked="{Boolean}false"
                                                fieldDescription="Check to remove gutters"
                                                name="./removeGutters"
                                                text="Remove Gutters"
                                                value="{Boolean}true"/>
                                        </items>
                                    </properties-group>
                                </items>
                            </coltype>
                        </items>
                    </properties>
                </items>
            </tabs>
        </items>
    </content>
</jcr:root>
